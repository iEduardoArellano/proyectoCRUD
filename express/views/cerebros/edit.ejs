<div class="row container">
    <div class="col-md-12">
        <form action="/cerebro/edit/<%= ecerebro.id %>?_method=put" method="POST" enctype='multipart/form-data' >
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= ecerebro.flavor %>" >
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="descripcion" value="<%= ecerebro.description %>" >
            </div>
            <div class="form-group">
                <label for="">iq</label>
                <input type="number" class="form-control" name="iq" value="<%= ecerebro.iq %>" >
            </div>
            <div class="form-group">
                <input type="file" accept="image/*" name="picture" value="<%= ecerebro.picture %>">
                <input type="text" name="pictureR" value="<%= ecerebro.picture %>" style="display: none;">
            </div>
            <button class="btn btn-primary">editar cerebro</button>
        </form>
    </div>
</div>

