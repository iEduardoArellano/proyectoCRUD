<% include _header %>

<%
      if(alert==1){
          %>
          <div class="alert alert-danger" role = "alert">NO se logro eliminar</div>
          <%
      }
%>

<div class="row container">
    <div class="col-md-12">
        <form action="/zombies/delete/<%= eZombie.id%>?_method=DELETE" method="post">
            <div class="form-group">
                <label for="">nombre</label>
                <input type="text" class="form-control" name="name" value="<%= eZombie.name %>" disabled>
            </div>
            <div class="form-group">
                <label for="">email</label>
                <input type="text" class="form-control" name="email" value="<%= eZombie.email %>" disabled>
            </div>
            <div class="form-group">
                <label for="">tipo</label>
                <input type="text" class="form-control" name="type" value="<%= eZombie.type %>" disabled>
            </div>
            <button class="btn btn-primary">borrar zombie</button>
        </form>
    </div>
</div>

<% include _footer %>